<%- include('partials/header', { title: product.name, bootstrap: true }) %>

    <main class="py-5">
        <div class="container">
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/products">Products</a></li>
                    <li class="breadcrumb-item active" aria-current="page"><%= product.name %></li>
                </ol>
            </nav>

            <div class="row g-4">
                <!-- Product Image -->
                <div class="col-md-6">
                    <div class="product-image-container">
                        <img src="<%= product.image %>" alt="<%= product.name %>" class="img-fluid rounded product-detail-image" id="mainImage">
                    </div>
                </div>

                <!-- Product Info -->
                <div class="col-md-6">
                    <h1 class="product-title mb-3"><%= product.name %></h1>
                    <div class="product-price-section mb-3">
                        <span class="product-price-large">$<%= product.price.toFixed(2) %></span>
                    </div>
                    <div class="product-meta mb-4">
                        <span class="badge bg-primary"><%= product.category %></span>
                        <span class="badge bg-success ms-2">In Stock (<%= product.stock %> available)</span>
                    </div>
                    <p class="product-description mb-4"><%= product.description %></p>
                    
                    <form id="addToCartForm" class="mb-4">
                        <div class="row g-3 align-items-end">
                            <div class="col-auto">
                                <label for="quantity" class="form-label">Quantity</label>
                                <input type="number" class="form-control" id="quantity" name="quantity" value="1" min="1" max="<%= product.stock %>" style="width: 100px;">
                            </div>
                            <div class="col-auto">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="bi bi-cart-plus"></i> Add to Cart
                                </button>
                            </div>
                        </div>
                    </form>

                    <div class="product-features">
                        <h5 class="mb-3">Features</h5>
                        <ul class="list-unstyled">
                            <li class="mb-2">✓ Free shipping on orders over $50</li>
                            <li class="mb-2">✓ 30-day return policy</li>
                            <li class="mb-2">✓ Secure payment</li>
                            <li class="mb-2">✓ Quality guaranteed</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Related Products -->
            <% if (relatedProducts.length > 0) { %>
            <div class="mt-5">
                <h2 class="mb-4">Related Products</h2>
                <div class="row g-4">
                    <% relatedProducts.forEach(relatedProduct => { %>
                    <div class="col-md-3">
                        <div class="card h-100 product-card">
                            <a href="/products/<%= relatedProduct._id %>" class="text-decoration-none">
                                <img src="<%= relatedProduct.image %>" class="card-img-top product-card-image" alt="<%= relatedProduct.name %>">
                            </a>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">
                                    <a href="/products/<%= relatedProduct._id %>" class="text-decoration-none text-dark">
                                        <%= relatedProduct.name %>
                                    </a>
                                </h5>
                                <p class="card-text text-primary fw-bold mb-2">$<%= relatedProduct.price.toFixed(2) %></p>
                                <button class="btn btn-sm btn-primary mt-auto add-to-cart-btn" data-product-id="<%= relatedProduct._id %>">
                                    Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
            <% } %>
        </div>
    </main>

    <style>
        .product-detail-image {
            width: 100%;
            height: 500px;
            object-fit: cover;
            border: 1px solid #dee2e6;
        }
        .product-title {
            font-size: 2.5rem;
            font-weight: 700;
            color: #1e293b;
        }
        .product-price-large {
            font-size: 2rem;
            font-weight: bold;
            color: #2563eb;
        }
        .product-description {
            font-size: 1.1rem;
            line-height: 1.8;
            color: #64748b;
        }
        .product-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }
        .product-card-image {
            height: 200px;
            object-fit: cover;
        }
    </style>

    <script>
        document.getElementById('addToCartForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            const quantity = document.getElementById('quantity').value;
            const productId = '<%= product._id %>';
            
            try {
                const response = await fetch(`/cart/add/${productId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ quantity: parseInt(quantity) })
                });
                
                const data = await response.json();
                if (data.success) {
                    alert('Product added to cart!');
                    if (document.getElementById('cartBadge')) {
                        document.getElementById('cartBadge').textContent = data.cartCount;
                    }
                } else {
                    alert('Error adding product to cart');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error adding product to cart');
            }
        });

        // Add to cart for related products
        document.querySelectorAll('.add-to-cart-btn').forEach(btn => {
            btn.addEventListener('click', async function() {
                const productId = this.getAttribute('data-product-id');
                try {
                    const response = await fetch(`/cart/add/${productId}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ quantity: 1 })
                    });
                    
                    const data = await response.json();
                    if (data.success) {
                        alert('Product added to cart!');
                        if (document.getElementById('cartBadge')) {
                            document.getElementById('cartBadge').textContent = data.cartCount;
                        }
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('Error adding product to cart');
                }
            });
        });
    </script>

<%- include('partials/footer', { bootstrap: true }) %>

