<%- include('header', { title: 'Dashboard' }) %>

    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <h1 class="mb-4">Admin Dashboard</h1>
                
                <!-- Stats Cards -->
                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title">Total Products</h5>
                                <h2 class="text-primary"><%= totalProducts %></h2>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Products -->
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Recent Products</h5>
                        <a href="/admin/products/new" class="btn btn-sm btn-primary">Add New Product</a>
                    </div>
                    <div class="card-body">
                        <% if (products.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Price</th>
                                        <th>Category</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% products.forEach(product => { %>
                                    <tr>
                                        <td><%= product.name %></td>
                                        <td>$<%= product.price.toFixed(2) %></td>
                                        <td><%= product.category %></td>
                                        <td>
                                            <a href="/admin/products/<%= product._id %>/edit" class="btn btn-sm btn-warning">Edit</a>
                                        </td>
                                    </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                        <% } else { %>
                        <p class="text-muted">No products yet. <a href="/admin/products/new">Add your first product</a></p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- include('footer') %>

